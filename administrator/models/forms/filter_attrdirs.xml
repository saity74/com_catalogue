<?xml version="1.0" encoding="utf-8"?>
<form>
    <fields name="filter">
        <field
                name="search"
                type="text"
                label="COM_CATALOGUE_FILTER_SEARCH_DESC"
                description="COM_CATALOGUE_FILTER_SEARCH_DESC"
                hint="JSEARCH_FILTER"
                />
        <field
                name="published"
                type="status"
                label="COM_CATALOGUE_FILTER_PUBLISHED"
                description="COM_CATALOGUE_FILTER_PUBLISHED_DESC"
                onchange="this.form.submit();"
                >
            <option value="">JOPTION_SELECT_PUBLISHED</option>
        </field>
    </fields>
    <fields name="list">
        <field
                name="fullordering"
                type="list"
                label="COM_CATALOGUE_LIST_FULL_ORDERING"
                description="COM_CATALOGUE_LIST_FULL_ORDERING_DESC"
                onchange="this.form.submit();"
                default="d.id DESC"
                >
            <option value="">JGLOBAL_SORT_BY</option>
            <option value="d.ordering ASC">JGRID_HEADING_ORDERING_ASC</option>
            <option value="d.ordering DESC">JGRID_HEADING_ORDERING_DESC</option>
            <option value="d.state ASC">JSTATUS_ASC</option>
            <option value="d.state DESC">JSTATUS_DESC</option>
            <option value="d.title ASC">JGLOBAL_TITLE_ASC</option>
            <option value="d.title DESC">JGLOBAL_TITLE_DESC</option>
            <option value="language ASC">JGRID_HEADING_LANGUAGE_ASC</option>
            <option value="language DESC">JGRID_HEADING_LANGUAGE_DESC</option>
            <option value="d.created ASC">JDATE_ASC</option>
            <option value="d.created DESC">JDATE_DESC</option>
            <option value="d.id ASC">JGRID_HEADING_ID_ASC</option>
            <option value="d.id DESC">JGRID_HEADING_ID_DESC</option>
        </field>
        <field
                name="limit"
                type="limitbox"
                class="input-mini"
                default="25"
                label="COM_CATALOGUE_LIST_LIMIT"
                description="COM_CATALOGUE_LIST_LIMIT_DESC"
                onchange="this.form.submit();"
                />
    </fields>
</form>
