            <option value="">JGLOBAL_USE_GLOBAL</option>
            <option value="price">COM_CATALOGUE_ITEM_PRICE_MIN_FIRST</option>
            <option value="rprice">COM_CATALOGUE_ITEM_PRICE_MAX_FIRST</option>
